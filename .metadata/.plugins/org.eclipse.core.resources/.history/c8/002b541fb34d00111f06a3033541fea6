		<link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/dojo/1.6/dijit/themes/claro/claro.css" media="screen"/>

 		<script src="dojoBase/dojo/dojo.js" data-dojo-config="parseOnLoad: true">
		</script>
		<script>
			dojo.require("dojo.parser");
			dojo.require("dijit.layout.BorderContainer");
			dojo.require("dijit.layout.ContentPane");
		</script>
		
		<script type="text/javascript">
      		dojo.require("dojo.string");
      		dojo.requireLocalization("TuimaWeb", "index_res");
      		function init()
      		{
        		var nlsStrings = dojo.i18n.getLocalization("TuimaWeb","index_res");
        		var greetingString = nlsStrings.GREETING; 
        		var personString = nlsStrings.PERSON;
        		var greetingTemplate = nlsStrings.GREETING_SENTENCE;
        		var finalGreeting = dojo.string.substitute(greetingTemplate,
                                                   {greeting:greetingString,
                                                    personTitle:personString});
        		dojo.byId("helloDiv").innerHTML = finalGreeting;
        		dojo.byId("titleId").text = finalGreeting;
      		}
      			PAGE_TITLE:"Archive to your recipes",
	GREETING: "Archive your favourite recipes to your own personal archive. Seek them later easily.",
	COPY_PASTE_AREA: "Copy/Paste recipe here:"
      		
      		dojo.addOnLoad(init);
    </script>
		
